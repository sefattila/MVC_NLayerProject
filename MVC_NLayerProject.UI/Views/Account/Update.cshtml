@using MVC_NLayerProject.UI.Models.VMs.UserVMs;
@model UserUpdateVM

<div class="container col-lg-4">
    <form asp-action="Update" method="post">
        <table class="table">
            <tbody>
                <tr>
                    <th><label asp-for="UserName" class="control-label"></label></th>
                    <td><input type="text" asp-for="UserName" class="form-control" /></td>
                    <td><span asp-validation-for="UserName" class="text-danger"></span></td>
                </tr>
                <tr>
                    <th><label asp-for="FirstName" class="control-label"></label></th>
                    <td><input type="text" asp-for="FirstName" class="form-control" /></td>
                    <td><span asp-validation-for="FirstName" class="text-danger"></span></td>
                </tr>
                <tr>
                    <th><label asp-for="LastName" class="control-label"></label></th>
                    <td><input type="text" asp-for="LastName" class="form-control" /></td>
                    <td><span asp-validation-for="LastName" class="text-danger"></span></td>
                </tr>
                <tr>
                    <th><label asp-for="Email" class="control-label"></label></th>
                    <td><input type="text" asp-for="Email" class="form-control" /></td>
                    <td><span asp-validation-for="Email" class="text-danger"></span></td>
                </tr>
                <tr>
                    <th><label asp-for="PhoneNumber" class="control-label"></label></th>
                    <td><input type="number" asp-for="PhoneNumber" class="form-control" /></td>
                    <td><span asp-validation-for="PhoneNumber" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td><button type="submit" class="btn btn-warning">Kullanıcı Güncelle</button></td>
                </tr>
            </tbody>
        </table>
    </form>
</div>