@using MVC_NLayerProject.UI.Models.VMs.ArticleVMs;

@model IEnumerable<ArticleVM>

<div class="container col-lg-10">
    <table class="table">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Ortalama Okuma Süresi</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ArticleVM item in Model)
            {
                <tr>
                    <th>@item.Header</th>
                    <th>@item.AvgReadingTime</th>
                    <th><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a></th>
                    <th><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></th>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create" class="btn btn-outline-success">Makale Oluştur</a>
</div>